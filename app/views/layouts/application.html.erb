<!DOCTYPE html>
<html>
  <head>
    <title>ToushiplusAcount</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <!-- Fixed navbar -->
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
	<div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
	  <%= link_to "投資+", root_path, class: "navbar-brand" -%>
	</div>
	<div class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li>
	      <%= link_to "Home", root_path -%>
	    </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
	    <li class="dropdown">
	      <% if user_signed_in? -%>
		<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%= current_user.name -%> <b class="caret"></b></a>
		<ul class="dropdown-menu" role="menu">
		  <li>
		    <%= link_to "ログアウト", destroy_user_session_path, method: 'delete' %>
		  </li>
		</ul>
	      <% else -%>
		<a href="#" class="dropdown-toggle" data-toggle="dropdown">Login <b class="caret"></b></a>
		<ul class="dropdown-menu" role="menu">
		  <li><%= link_to t('devise.sessions.new.sign_in'), new_user_session_path %></li>
		  <li><%= link_to t('devise.registrations.new.sign_up'), new_user_registration_path %></li>
		</ul>
	      <% end -%>
	    </li>
          </ul>
	</div><!--/.nav-collapse -->
      </div>
    </div>

    <div class="container">
      <div class="row">

	<p class="notice"><%= notice %></p>
	<p class="alert"><%= alert %></p>

	<%= yield %>

      </div>
      <hr>
      <footer>
	<p>
	  &copy; 投資+
	</p>
      </footer>
    </div>

  </body>
</html>
